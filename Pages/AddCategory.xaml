<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuwademyMobile.Pages.AddCategoryPage"
             xmlns:data="clr-namespace:DuwademyMobile.Data"
             Title="Add Category">

    <StackLayout Padding="20">
        <Label Text="Add New Category" FontSize="24" HorizontalOptions="Center" />

        <StackLayout Padding="10">
            <Entry Text="{Binding CategoryName}" Placeholder="Enter category name" />
            <Entry Text="{Binding CategoryDescription}" Placeholder="Enter category description" />

            <Button Text="Save" Command="{Binding AddCategoryCommand}" />
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>
