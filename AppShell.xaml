<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DuwademyMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DuwademyMobile.Pages"
    FlyoutIcon="menu.png"
    Shell.FlyoutBackgroundColor="LightGray">

    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:Home}"/>
    </FlyoutItem>
    <FlyoutItem Title="Courses" Icon="course.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:Courses}"/>
    </FlyoutItem>
    <FlyoutItem Title="Categories" Icon="category.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:Categories}"/>
    </FlyoutItem>

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkGreen">
            <Image Source="logo.png"/>
        </Grid>
    </Shell.FlyoutHeader>
</Shell>
